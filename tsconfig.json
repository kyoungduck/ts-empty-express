{
	"extends": "./tsconfig.path.json",
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"allowJs": true,
		"strict": true,
		"rootDir": ".",
		"outDir": "./build/",
		"baseUrl": "./",
		"paths": {
			"~/*": ["*"]
		},
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["node_modules", ".data", "build"]
}
